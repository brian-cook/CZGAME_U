            "test_framework": "1.4.6",
            "timeline": "1.8.7",
            "multiplayer_center": "1.0.0",
            "naughty_attributes": "2.1.4"
        }
    },
    "technical_standards": {
        "priority": "high",
        "sources": [
            "Documentation/Guidelines/performance_guidelines.txt",
            "Documentation/Guidelines/infrastructure.txt"
        ],
        "requirements": {
            "performance": {
                "max_draw_calls": 100,
                "target_fps": 60,
                "max_memory": 1024,
                "respect_pooling": true,
                "reference_file": "Documentation/Guidelines/performance_guidelines.txt",
                "monitoring": {
                    "use_profiler_recorder": true,
                    "check_interval": 0.5,
                    "track_metrics": ["drawCalls", "memory", "fps"]
                }
            },
            "infrastructure": {
                "follow_patterns": true,
                "maintain_scalability": true,
                "ensure_testability": true,
                "reference_file": "Documentation/Guidelines/infrastructure.txt",
                "testing": {
                    "use_performance_testing": true,
                    "implement_play_mode_tests": true,
                    "verify_multiplayer": true
                }
            }
        }
    },
    "project_alignment": {
        "priority": "medium",
        "sources": [
            "Documentation/Architecture/checklists/core_game_loop_checklist.txt",
